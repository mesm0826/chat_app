<div class="login_wrapper">
  <div class="form_wrapper">
    <h2 class="title_login">Chatにログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="field">
        <%= f.email_field :email, class: "input_field", autofocus: true, placeholder: "メールアドレス", autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, class: "input_field", placeholder: "パスワード", autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :"ログインしたままにする" %>
        </div>
      <% end -%>

      <div class="field actions">
        <%= f.submit "ログイン", class: "btn btn-info login_btn"%>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
<%= image_tag("registrations_view.png", class: "login_pct")%>
</div>